# Microsoft Graph API Configuration
CLIENT_ID=your_azure_client_id
TENANT_ID=consumers

# Microsoft Graph Scopes
GRAPH_SCOPES=Tasks.ReadWrite

# AI Provider Selection (anthropic, openai, or google)
AI_PROVIDER=anthropic

# AI API Keys (add the one you're using)
ANTHROPIC_API_KEY=your_anthropic_api_key
# OPENAI_API_KEY=your_openai_api_key
# GOOGLE_API_KEY=your_google_api_key

# AI Model Selection (optional - uses defaults if not specified)
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
# OPENAI_MODEL=gpt-4-turbo-preview
# GOOGLE_MODEL=gemini-pro

# Email Configuration (optional - for daily brief delivery)
SEND_EMAIL_BRIEF=false
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=your-email@gmail.com
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_PASSWORD=your-gmail-app-password

# Application Settings
LOG_LEVEL=INFO
ENABLE_TASK_UPDATES=false
GENERATE_MARKDOWN_BRIEF=true

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL_HOURS=24

# Output Directory
OUTPUT_DIR=output
